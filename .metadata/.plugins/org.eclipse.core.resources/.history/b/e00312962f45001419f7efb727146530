            </intent-filter>
            <intent-filter>
                 <action android:name="android.provider.MediaStore.RECORD_SOUND" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
          
        </activity>
        
        <activity android:name=".ReclistActivity"
